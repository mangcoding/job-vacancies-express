# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret Key (Change this to a strong random string in production)
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production

# JWT Token Expiration (optional, default is 24h)
# Format: number followed by unit (s, m, h, d)
# Examples: 3600s, 60m, 24h, 7d
JWT_EXPIRES_IN=24h

# Database Configuration
# For SQLite (default)
DATABASE_URL="file:./prisma/database.sqlite"

# For PostgreSQL (if you want to switch databases)
# DATABASE_URL="postgresql://user:password@localhost:5432/job_vacancies?schema=public"

# For MySQL (if you want to switch databases)
# DATABASE_URL="mysql://user:password@localhost:3306/job_vacancies"

# Session Configuration (if using cookies)
SESSION_SECRET=your-session-secret-change-in-production

# CORS Configuration (optional)
# CORS_ORIGIN=http://localhost:3000

# Logging Level (optional)
# LOG_LEVEL=info
